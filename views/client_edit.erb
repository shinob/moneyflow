<h1>取引先編集</h1>

<form action="/clients/<%= @client.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <div>
    <label for="name">会社名:</label>
    <input type="text" id="name" name="name" value="<%= @client.name %>" required>
  </div>
  <div>
    <label for="address">住所:</label>
    <input type="text" id="address" name="address" value="<%= @client.address %>">
  </div>
  <div>
    <label for="contact_person">担当者名:</label>
    <input type="text" id="contact_person" name="contact_person" value="<%= @client.contact_person %>">
  </div>
  <div>
    <label for="phone_number">電話番号:</label>
    <input type="text" id="phone_number" name="phone_number" value="<%= @client.phone_number %>">
  </div>
  <button type="submit">更新</button>
  <a href="/clients/<%= @client.id %>" class="button-link" style="margin-left: 10px;">キャンセル</a>
</form>
